# Port Configuration
APP_PORT=3000
BACKEND_PORT=8000
FRONTEND_PORT=5173
POSTGRES_PORT=5432

# Backend API URL (for frontend to connect)
# In production with nginx, use: http://localhost/api
# In development, use: http://localhost:8000
VITE_API_URL=http://localhost:8000

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=datamanagerdb

# Backend Secrets
# SECRET_KEY is REQUIRED for JWT token signing (authentication)
SECRET_KEY=your-secret-key-change-in-production

# ENCRYPTION_KEY is OPTIONAL - only needed as fallback for old data
# Since each DataSession has its own encryption key, you typically don't need this
# Only set if you have old data encrypted with a global key or for backward compatibility
# ENCRYPTION_KEY=your-encryption-key-change-in-production

# Storage Configuration
# EPHEMERAL_STORAGE=false ensures data persists in PostgreSQL (recommended for production)
# EPHEMERAL_STORAGE=true uses SQLite and data is cleared on container restart
EPHEMERAL_STORAGE=false
CLEAR_ON_STARTUP=false

# Email Configuration (optional, for OTP and password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
